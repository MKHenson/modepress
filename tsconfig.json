{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": false,
        "noEmitOnError": true,
        "declaration": false,
        "sourceMap": false,
        "preserveConstEnums": true,
        "noImplicitAny": false,
        "target": "es6",
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "outDir": "./dist",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "rootDir": "src"
    },
    "include": [
        "src/references.d.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "src/definitions/generated/*",
        "src/definitions/required/**/*"
    ]
}