{
  "name": "mantle",
  "version": "0.4.0",
  "types": "./src/client-models",
  "description": "The mantle server & API",
  "main": "./src/index",
  "author": "Mathew Henson",
  "license": "MIT",
  "scripts": {
    "build": "gulp build",
    "clean": "rimraf dist",
    "migrate-up": "migrate-mongo up --file=mm-config.js",
    "migrate-down": "migrate-mongo down --file=mm-config.js",
    "migrate-status": "migrate-mongo status --file=mm-config.js",
    "migrate-create": "migrate-mongo create RENAME --file=mm-config.js",
    "test": "mocha --file ./test/index.ts --recursive ./test/tests/**/*.ts --require ts-node/register --exit --config=./config.json --server=0 --logging=false --keyFile=./volume-credentials.json --runningTests=true --clientsFolder=./test/ --remotes.local.url=http://localhost:8000/ --remotes.local.path=test/test-server/media --remotes.maxFileSize=524288",
    "bump-patch": "gulp bumpPatch",
    "bump-minor": "gulp bumpMinor",
    "bump-major": "gulp bumpMajor",
    "start": "nodemon",
    "dev-server-cached": "ts-node --cache-directory .tscache ./src/main.ts --config=./config.json --numThreads=1 --logging=true --inspect=true",
    "dev-server": "ts-node ./src/main.ts --config=./config.json --numThreads=1 --logging=true --inspect=true",
    "dev-server-watch": "nodemon ./src/main.ts --config=./config.json --numThreads=1 --logging=true --inspect=true",
    "start-server": "cross-env NODE_ENV=production ts-node ./src/main.ts --config=./config.json --logging=true",
    "generate-schema": "ts-node ./src/main.ts --config=./config.json --numThreads=1 --logging=true --inspect=true --writeSchema=true",
    "generate-client-models": "graphql-codegen --config codegen.yml"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.17.8",
    "@graphql-codegen/introspection": "1.17.8",
    "@graphql-codegen/typescript": "1.17.8",
    "@types/mocha": "~5.2.5",
    "form-data": "2.3.1",
    "mocha": "~5.2.0",
    "node-fetch": "1.7.3"
  },
  "dependencies": {
    "@google-cloud/storage": "~2.0.3",
    "@types/bcrypt": "~3.0.0",
    "@types/body-parser": "^1.16.8",
    "@types/compression": "0.0.36",
    "@types/deepmerge": "^1.3.3",
    "@types/entities": "~1.1.0",
    "@types/express-graphql": "^0.6.2",
    "@types/form-data": "~0.0.33",
    "@types/formidable": "1.0.31",
    "@types/graphql": "^14.5.0",
    "@types/jsdom": "~12.2.0",
    "@types/mailgun-js": "0.22.4",
    "@types/mongodb": "~2.2.21",
    "@types/morgan": "^1.7.35",
    "@types/node": "~7.0.34",
    "@types/node-fetch": "1.6.7",
    "@types/rimraf": "^2.0.2",
    "@types/sanitize-html": "~1.13.31",
    "@types/validator": "^6.2.3",
    "@types/ws": "0.0.42",
    "@types/yargs": "~6.6.0",
    "bcrypt": "3.0.5",
    "body-parser": "1.19.0",
    "compressible": "2.0.18",
    "compression": "1.7.4",
    "cross-env": "7.0.2",
    "deepmerge": "1.5.2",
    "express": "4.17.1",
    "express-graphql": "0.9.0",
    "formidable": "1.2.2",
    "graphql": "14.6.0",
    "graphql-tag": "2.10.1",
    "gulp": "4.0.2",
    "gulp-tslint": "8.1.4",
    "gulp-typescript": "3.2.4",
    "jsdom": "8.5.0",
    "mailgun-js": "0.22.0",
    "migrate-mongo": "2.2.1",
    "mongodb": "2.2.35",
    "morgan": "1.9.1",
    "nodemon": "2.0.2",
    "prettier": "1.19.1",
    "reflect-metadata": "0.1.13",
    "request": "2.88.2",
    "rimraf": "2.6.2",
    "sanitize-html": "1.22.1",
    "ts-node": "8.8.2",
    "tslint": "6.0.0",
    "type-graphql": "0.17.6",
    "typescript": "3.7.5",
    "unit.js": "~2.0.0",
    "validator": "3.43.0",
    "winston": "3.2.1",
    "ws": "~2.2.3",
    "yargs": "3.12.0"
  }
}