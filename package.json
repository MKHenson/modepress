{
  "name": "modepress",
  "version": "0.15.1",
  "types": "./src/index",
  "description": "The modepress server & API",
  "main": "./src/index",
  "author": "Mathew Henson",
  "license": "MIT",
  "scripts": {
    "build": "gulp build",
    "clean": "rimraf dist",
    "migrate-up": "migrate-mongo up --file=mm-config.js",
    "migrate-down": "migrate-mongo down --file=mm-config.js",
    "migrate-status": "migrate-mongo status --file=mm-config.js",
    "migrate-create": "migrate-mongo create RENAME --file=mm-config.js",
    "test": "mocha ./test/index.js --exit --config=./config.json --server=0 --logging=false --keyFile=./volume-credentials.json --runningTests=true --clientsFolder=./test/ --remotes.local.url=http://localhost:8000 --remotes.local.path=test/test-server/media --remotes.maxFileSize=524288",
    "bump-patch": "gulp bump-patch",
    "bump-minor": "gulp bump-minor",
    "bump-major": "gulp bump-major",
    "dev-server-cached": "ts-node --cache-directory .tscache ./src/main.ts --config=./config.json --numThreads=1 --logging=true --inspect=true",
    "dev-server": "ts-node ./src/main.ts --config=./config.json --numThreads=1 --logging=true --inspect=true",
    "start-server": "cross-env NODE_ENV=production ts-node ./src/main.ts --config=./config.json --logging=true"
  },
  "devDependencies": {
    "mocha": "~5.2.0",
    "@types/mocha": "~5.2.5",
    "form-data": "2.3.1",
    "node-fetch": "1.7.3"
  },
  "dependencies": {
    "@google-cloud/storage": "~2.0.3",
    "@types/bcrypt": "~1.0.0",
    "@types/body-parser": "^1.16.8",
    "@types/compression": "0.0.36",
    "@types/deepmerge": "^1.3.3",
    "@types/entities": "~1.1.0",
    "@types/form-data": "~0.0.33",
    "@types/formidable": "1.0.31",
    "@types/jsdom": "~2.0.30",
    "@types/mongodb": "~2.2.21",
    "@types/morgan": "^1.7.35",
    "@types/node": "~7.0.34",
    "@types/node-fetch": "1.6.7",
    "@types/rimraf": "^2.0.2",
    "@types/sanitize-html": "~1.13.31",
    "@types/validator": "^6.2.3",
    "@types/winston": "^2.3.9",
    "@types/ws": "0.0.42",
    "@types/yargs": "~6.6.0",
    "bcrypt": "~1.0.2",
    "body-parser": "~1.17.2",
    "compressible": "^2.0.14",
    "compression": "~1.6.2",
    "cross-env": "~5.2.0",
    "deepmerge": "^1.5.2",
    "express": "^4.15.5",
    "formidable": "~1.2.1",
    "gulp": "~3.9.1",
    "gulp-tslint": "^8.1.3",
    "gulp-typescript": "^3.2.4",
    "jsdom": "~8.5.0",
    "mailgun-js": "~0.7.15",
    "migrate-mongo": "2.2.1",
    "mongodb": "~2.2.35",
    "morgan": "~1.8.2",
    "request": "~2.69.0",
    "rimraf": "^2.6.2",
    "sanitize-html": "^1.14.3",
    "ts-node": "^5.0.1",
    "tslint": "~5.7.0",
    "typescript": "2.8.1",
    "unit.js": "~2.0.0",
    "validator": "~3.43.0",
    "winston": "~2.3.1",
    "ws": "~2.2.3",
    "yargs": "~3.12.0"
  }
}
